<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mcp.javagadgets.controller.MainController"
            prefWidth="1000" prefHeight="900">

    <top>
        <MenuBar>
            <Menu text="Tools">
                <MenuItem text="Data Desensitization" onAction="#handleDataDesensitization"/>
            </Menu>
            <Menu text="Help">
                <MenuItem text="About"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 30px;">
            <Label text="Welcome to Java Gadgets" fx:id="welcomeLabel">
                <font>
                    <Font name="Arial" size="24"/>
                </font>
            </Label>

            <Label text="A collection of useful Java utilities" fx:id="subTitleLabel">
                <font>
                    <Font name="Arial" size="16"/>
                </font>
            </Label>

            <Label text="Select a tool from the Tools menu to get started" fx:id="hintLabel">
                <font>
                    <Font name="Arial" size="14"/>
                </font>
                <padding>
                    <Insets top="20"/>
                </padding>
            </Label>
        </VBox>
    </center>
</BorderPane>